{
  "expo": {
    "name": "EvimAI",
    "slug": "evimai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6C63FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.evimai.app"
    },
    "android": {
      "package": "com.evimai.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "react-native-vision-camera",
      [
        "expo-image-picker",
        {
          "photosPermission": "EvimAI'nin evinizi tasarlaması için fotoğraflara erişim gerekiyor.",
          "cameraPermission": "EvimAI'nin fotoğraf çekmesi için kamera erişimi gerekiyor."
        }
      ]
    ]
  }
}
