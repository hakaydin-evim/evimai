services:
  - type: web
    name: evimai-backend
    runtime: node
    env: node
    region: frankfurt
    plan: free
    rootDirectory: backend
    buildCommand: npm install
    startCommand: node server.js
    healthCheckPath: /health
    envVars:
      - key: NODE_ENV
        value: production
      - key: FAL_API_KEY
        sync: false
    autoDeploy: true
